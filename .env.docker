# Docker Environment Configuration
# Copy this file to .env.local and customize as needed

# Server Configuration
PORT=8080
NODE_ENV=production

# Fetching Configuration
DEFAULT_MODE=crawlee-browser
TIMEOUT_MS=20000
MAX_RETRIES=2
USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Caching
CACHE_ENABLED=true
CACHE_MAX_SIZE=500
CACHE_TTL_MS=300000

# Security
ALLOW_PRIVATE_NETWORKS=false
BLOCKLIST_HOSTS=*.internal,*.local,metadata.google,169.254.169.254

# Proxy Configuration (optional)
# PROXIES=http://proxy1.com:8080,http://proxy2.com:8080
# PROXIES_FILE=/app/proxies.txt

# Crawlee Configuration
USE_CRAWLEE=true
MAX_SESSIONS=20
SESSION_MAX_USAGE=50
SESSION_MAX_ERRORS=3

# Browser Fingerprinting
FINGERPRINT_BROWSERS=chrome,firefox
FINGERPRINT_DEVICES=desktop,mobile
FINGERPRINT_LOCALES=en-US,en-GB,de-DE
FINGERPRINT_OS=linux,windows,macos

# Crawler Pool
MAX_CRAWLERS=5
CRAWLER_IDLE_TIMEOUT_MS=300000

# Logging
VERBOSE=false
LOG_LEVEL=error

# Enhanced Architecture Configuration
ARCHITECTURE_MODE=enhanced
ENABLE_RESOURCE_POOLING=true
ENABLE_MONITORING=true
MONITORING_PORT=3002
API_PORT=8080

# Resource Pool Configuration
HTTP_POOL_MIN_SIZE=5
HTTP_POOL_MAX_SIZE=20
BROWSER_POOL_MIN_SIZE=2
BROWSER_POOL_MAX_SIZE=10
POOL_ACQUIRE_TIMEOUT_MS=10000
POOL_IDLE_TIMEOUT_MS=600000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=10
CIRCUIT_BREAKER_TIMEOUT_MS=120000

# Metrics Collection
METRICS_ENABLED=true
METRICS_FLUSH_INTERVAL_MS=30000
